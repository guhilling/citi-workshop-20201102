virsh destroy master02.{{ ansible_fqdn }} && virsh undefine master02.{{ ansible_fqdn }} --remove-all-storage
virsh destroy master03.{{ ansible_fqdn }} && virsh undefine master03.{{ ansible_fqdn }} --remove-all-storage
